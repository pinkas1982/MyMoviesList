<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapps.mymovieslist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.myapps.mymovieslist.activities.MovieMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.myapps.mymovieslist.activities.EditMovieListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">


        </activity>
        <activity android:name="com.myapps.mymovieslist.activities.SearchMovieActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >

        </activity>
    </application>

</manifest>